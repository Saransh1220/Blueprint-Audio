{
    "$schema": "https://biomejs.dev/schemas/2.3.8/schema.json",
    "files": {
        "includes": [
            "**",
            "!**/node_modules",
            "!**/dist",
            "!**/.angular",
            "!**/src/assets",
            "!**/*.html"
        ]
    },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true,
            "style": {
                "useImportType": "off"
            }
        }
    },
    "javascript": {
        "parser": {
            "unsafeParameterDecoratorsEnabled": true
        }
    }
}